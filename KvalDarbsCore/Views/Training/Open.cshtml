@using LogicCore

@model TeamTraining
@{
    ViewData["Title"] = Text.Training;
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-xl-6">
            <h3>@Text.Training: @this.Model.Name</h3>
            <p>@this.Model.Date.Value.ToShortDateString()</p>
        </div>
    </div>
    <div class="row">
        @foreach (var training in this.Model.Trainings)
        {
            <div class="col-12 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        @training.User.FullName
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var task in training.Tasks)
                        {
                            <li class="list-group-item">
                                <div class="col-12 col-sm-6">
                                    <p>@Text.Exercise: @task.Exercise.Name</p>
                                    <p>@Text.Repetition: @task.Repetition</p>
                                    <p>@Text.Time: @task.Time</p>
                                </div>
                                <div class="col-12 col-sm-6">

                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>

