@using LogicCore;

@model Team
@{
    ViewData["Title"] = Text.Team;
    Layout = "_Layout";
}

<h1>@Text.Create</h1>

<h4>@Text.Team</h4>
<hr />
<div class="container">
    @using (Html.BeginForm("Create", "Team", null, FormMethod.Post, true, null))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "w-100 form-control bg-white" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { @class = "w-100 form-control bg-white" })
        </div>
        <input type="submit" class="btn btn-primary" value="@Text.Submit" />
    }
</div>