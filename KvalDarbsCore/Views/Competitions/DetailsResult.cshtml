@using LogicCore
@model Result

@{
    ViewData["Title"] = Text.Details;
    Layout = "_Layout";
    var userId = (string)ViewData["ActiveUserId"];
}

<h1>@Text.Details</h1>

<div class="clearfix">
    <div class="float-left">
        <h4>@Text.Result</h4>
    </div>
</div>
<hr />
<div class="container">
    <dl class="row">
        <dt class="col-sm-2">
            @Text.Sportsmen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Athlete.FullName)
        </dd>
        <dt class="col-sm-2">
            @Text.Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
    </dl>
</div>
<div>
    @if (Model.AthleteId == userId)
    {
        <a asp-action="EditResult" asp-route-id="@Model.Id" class="btn btn-primary">@Text.Edit</a>
    }
    <a asp-action="Details" asp-route-id="@Model.CompetitionId" class="btn btn-primary ml-1">@Text.Back</a>
</div>